<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingTop="30dp"
    tools:context="ui.home.MenuFragment">

    <!-- Horizontal ScrollView for icons -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Icon with Label 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    app:cardCornerRadius="40.5dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/sign_translate" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/medium"
                    android:maxLines="2"
                    android:text="BISINDO Translation"
                    android:textAlignment="center"
                    android:textSize="14dp" />

            </LinearLayout>

            <!-- Icon with Label 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    app:cardCornerRadius="40.5dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/object_detect" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/medium"
                    android:maxLines="2"
                    android:text="Object Detection"
                    android:textAlignment="center"
                    android:textSize="14dp" />

            </LinearLayout>

            <!-- Icon with Label 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    app:cardCornerRadius="40.5dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/dictionary" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/medium"
                    android:maxLines="2"
                    android:text="BISINDO Dictionary"
                    android:textAlignment="center"
                    android:textSize="14dp" />

            </LinearLayout>

            <!-- Icon with Label 4 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="81dp"
                    android:layout_height="81dp"
                    app:cardCornerRadius="40.5dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/news" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/medium"
                    android:maxLines="2"
                    android:text="Menu"
                    android:textAlignment="center"
                    android:textSize="14dp" />

            </LinearLayout>

            <!-- Add more icons as needed -->
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
